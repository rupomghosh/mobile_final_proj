<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_View"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAECF8"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sushi Place"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="90dp"
            android:paddingBottom="10px"
            />
        <ImageView
            android:id="@+id/rest1logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="150px"
            android:scaleType="fitXY"
            android:src="@drawable/sandwich">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginTop="180dp"
            android:text="Sandwich"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginTop="200dp"
            android:text="$9.99"></TextView>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnSandwich"
            android:layout_height="100px"
            android:text="Add to Cart"
            android:padding="10px"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_marginTop="220dp"></Button>
        <ImageView
            android:id="@+id/wings"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="150px"
            android:layout_marginLeft="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/wafflebowl">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="200dp"
            android:text="Waffle bowl"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="200dp"
            android:text="$14.99"></TextView>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnWaffle"
            android:layout_height="100px"
            android:text="Add to Cart"
            android:padding="10px"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="220dp"></Button>

        <ImageView
            android:id="@+id/cheese"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="800px"
            android:scaleType="fitXY"
            android:src="@drawable/tacos">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginTop="400dp"
            android:text="Tacos"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginTop="420dp"
            android:text="$19.99"></TextView>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnTacos"
            android:layout_height="100px"
            android:text="Add to Cart"
            android:padding="10px"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_marginTop="440dp"></Button>
        <ImageView
            android:id="@+id/panzerroti"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="800px"
            android:layout_marginLeft="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/rest3">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="200dp"
            android:text="Sushi"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blue"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="200dp"
            android:text="$15.99"></TextView>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnSushi"
            android:layout_height="100px"
            android:text="Add to Cart"
            android:padding="10px"
            android:background="@color/blue"
            android:layout_marginLeft="200dp"
            android:textColor="@color/white"
            android:layout_marginTop="440dp"></Button>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:text="Copyright 2022, Curated Services Inc. "
            android:layout_marginLeft="160px"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium" />
    </RelativeLayout>
</ScrollView>
